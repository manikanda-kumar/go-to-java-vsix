{
  "name": "go-to-java-converter",
  "displayName": "Go to Java Converter",
  "description": "Convert Go function definitions to Java for Java developers learning Go",
  "version": "0.0.4",
  "publisher": "vscode",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "go",
    "golang",
    "java",
    "converter",
    "learning"
  ],
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "goToJava.convertFunction",
        "title": "Convert Go Function to Java",
        "category": "Go to Java"
      },
      {
        "command": "goToJava.previewFile",
        "title": "Preview File as Java",
        "category": "Go to Java",
        "icon": "$(open-preview)"
      },
      {
        "command": "goToJava.refreshPreview",
        "title": "Refresh Java Preview",
        "category": "Go to Java"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == go",
          "command": "goToJava.previewFile",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "editorLangId == go",
          "command": "goToJava.convertFunction",
          "group": "1_modification"
        },
        {
          "when": "editorLangId == go",
          "command": "goToJava.previewFile",
          "group": "1_modification"
        }
      ],
      "commandPalette": [
        {
          "when": "editorLangId == go",
          "command": "goToJava.convertFunction"
        },
        {
          "when": "editorLangId == go",
          "command": "goToJava.previewFile"
        },
        {
          "when": "editorLangId == go",
          "command": "goToJava.refreshPreview"
        }
      ]
    },
    "keybindings": [
      {
        "command": "goToJava.convertFunction",
        "key": "ctrl+shift+j",
        "mac": "cmd+shift+j",
        "when": "editorLangId == go"
      },
      {
        "command": "goToJava.previewFile",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "editorLangId == go"
      }
    ],
    "configuration": {
      "title": "Go to Java Converter",
      "properties": {
        "goToJava.hover.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover support to show Java equivalents"
        },
        "goToJava.hover.output": {
          "type": "string",
          "enum": [
            "signature",
            "method",
            "class"
          ],
          "default": "signature",
          "enumDescriptions": [
            "Show only the method signature",
            "Show the full method with body stub",
            "Show complete Java class with the method"
          ],
          "description": "What to show in hover tooltip"
        },
        "goToJava.hover.maxScanLines": {
          "type": "number",
          "default": 20,
          "description": "Maximum number of lines to scan for function definition"
        },
        "goToJava.preview.refreshOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh Java preview when Go file is saved"
        },
        "goToJava.preview.includeGettersSetters": {
          "type": "boolean",
          "default": true,
          "description": "Generate getters and setters for struct fields in preview"
        },
        "goToJava.parser": {
          "type": "string",
          "enum": ["regex", "tree-sitter"],
          "default": "tree-sitter",
          "description": "Parser engine used to read Go code (tree-sitter recommended for accuracy)"
        }
      }
    }
  },
  "scripts": {
    "compile": "node ../../node_modules/vscode/bin/compile -watch -p ./"
  },
  "dependencies": {
    "tree-sitter-go": "^0.20.3",
    "web-tree-sitter": "^0.21.1"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "tree-sitter-go": "^0.25.0",
    "web-tree-sitter": "^0.26.3"
  }
}
